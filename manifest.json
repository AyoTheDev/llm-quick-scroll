{
  "manifest_version": 3,
  "name": "Gemini Chat Navigator",
  "version": "1.0",
  "description": "Adds a navigation bar to quickly scroll through Gemini chat queries and responses.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/app/*", "https://gemini.google.com/chat/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_title": "Gemini Chat Navigator"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
